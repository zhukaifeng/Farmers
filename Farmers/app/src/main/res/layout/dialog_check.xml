<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="@dimen/dp349"
        android:layout_height="@dimen/dp535"
        android:orientation="vertical"
        >





        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp45"
            android:layout_marginLeft="@dimen/dp21"
            android:layout_marginRight="@dimen/dp10"
            android:background="@drawable/bg_white_all_radio"
            >



            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/write_context"
                android:textColorHint="@color/txt_black_153"
                android:paddingLeft="@dimen/dp10"
                android:background="@null"
                />


            <ImageView
                android:layout_width="@dimen/dp13"
                android:layout_height="@dimen/dp13"
                android:background="@drawable/bg_search"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp10"
                android:layout_centerVertical="true"
                />



        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp21"
            android:layout_marginTop="@dimen/dp30"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="@dimen/dp46"
                android:layout_height="@dimen/dp25"
                android:background="@drawable/bg_icon_market"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/product_market"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="@dimen/sp16"
                android:layout_marginLeft="@dimen/dp10"

                />

        </LinearLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp21"
            >

            <RadioGroup
                android:id="@+id/rg_company_option_type_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp10">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <android.support.v7.widget.AppCompatRadioButton
                        style="@style/CheckSelectTopItem"
                        android:checked="true"
                        android:text="南区农贸市场"/>

                    <android.support.v7.widget.AppCompatRadioButton
                        style="@style/CheckSelectTopItem"
                        android:text="南区农贸市场"/>
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <android.support.v7.widget.AppCompatRadioButton
                        style="@style/CheckSelectTopItem"
                        android:text="南区农贸市场"/>

                    <android.support.v7.widget.AppCompatRadioButton
                        style="@style/CheckSelectTopItem"
                        android:text="南区农贸市场"/>
                </TableRow>
            </RadioGroup>
        </TableLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="@drawable/bg_gray_line"
            android:layout_marginTop="@dimen/dp12"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp21"
            android:layout_marginTop="@dimen/dp17"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="@dimen/dp46"
                android:layout_height="@dimen/dp25"
                android:background="@drawable/bg_icon_company"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/company_name"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="@dimen/sp16"
                android:layout_marginLeft="@dimen/dp10"

                />

        </LinearLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp21"
            >

            <RadioGroup
                android:id="@+id/rg_market_option_type_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp10">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <android.support.v7.widget.AppCompatRadioButton
                        android:id="@+id/rb_one"
                        style="@style/CheckSelectTopItem"
                        android:checked="true"
                        android:text="南区农贸市场"/>

                    <android.support.v7.widget.AppCompatRadioButton
                        style="@style/CheckSelectTopItem"
                        android:text="南区农贸市场"/>
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <android.support.v7.widget.AppCompatRadioButton
                        style="@style/CheckSelectTopItem"
                        android:text="南区农贸市场"/>

                    <android.support.v7.widget.AppCompatRadioButton
                        style="@style/CheckSelectTopItem"
                        android:text="南区农贸市场"/>
                </TableRow>
            </RadioGroup>
        </TableLayout>
    </LinearLayout>
    
    <ImageView
        android:layout_width="@dimen/dp35"
        android:layout_height="@dimen/dp35"
        android:background="@drawable/bg_close"
        android:layout_marginTop="@dimen/dp20"
        />


</LinearLayout>