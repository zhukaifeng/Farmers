<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    tools:context=".view.HomeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_home_name"
                android:layout_width="224dp"
                android:layout_height="34dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_home_title"
                android:gravity="center"
                android:textSize="15dp">

                <TextView
                    android:id="@+id/tv_home_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="市场"
                    android:textColor="@color/color_333333"
                    android:textSize="14dp" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="6dp"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/bg_home_bottom" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="256dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_home_top" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="147dp"
                android:layout_marginTop="13dp">

                <LinearLayout
                    android:id="@+id/ll_home_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_home_top_left"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_home_1"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:background="@drawable/bg_home_retrospect" />

                    <TextView
                        android:id="@+id/tv_home_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/retrospect"
                        android:textColor="@color/write"
                        android:textSize="18dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_home_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_home_top_right"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_home_2"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:background="@drawable/bg_home_sampling" />

                    <TextView
                        android:id="@+id/tv_home_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/sampling"
                        android:textColor="@color/write"
                        android:textSize="18dp" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="147dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                >

                <LinearLayout
                    android:id="@+id/ll_home_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_home_bottom_left"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_home_3"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:background="@drawable/bg_home_stock" />

                    <TextView
                        android:id="@+id/tv_home_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/stock"
                        android:textColor="@color/write"
                        android:textSize="18dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_home_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_home_bottom_right"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_home_4"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:background="@drawable/bg_home_booking" />

                    <TextView
                        android:id="@+id/tv_home4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/booking"
                        android:textColor="@color/write"
                        android:textSize="18dp" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>