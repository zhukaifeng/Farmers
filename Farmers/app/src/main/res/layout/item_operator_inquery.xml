<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">


    <LinearLayout
        android:id="@+id/linear_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_gray_e9"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp59"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginRight="@dimen/dp15"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_stall_num"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp15"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/pay_stall"
                android:textColor="@color/txt_black_51"
                android:textSize="@dimen/sp15"
                />

            <TextView
                android:id="@+id/tv_company_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp15"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/company_name"
                android:textColor="@color/txt_black_51"
                android:textSize="@dimen/sp15"

                />

            <TextView
                android:id="@+id/tv_business_lincense"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp15"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/business_license"
                android:textColor="@color/color_00d39d"
                android:textSize="@dimen/sp15"
                />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/tv_connect"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp15"
                    android:drawableRight="@drawable/bg_arrow_down_tri"
                    android:gravity="center"
                    android:drawablePadding="@dimen/dp3"
                    android:text="@string/connect"
                    android:textColor="@color/txt_black_51"
                    android:textSize="@dimen/sp15"
                    />

            </RelativeLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp63"
            android:layout_marginLeft="@dimen/dp46"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dp10"
            android:background="@drawable/bg_down_arrow_opera"
            android:text="张浩                   3210XXXXXXXXXXXXXX
扬州市广陵区江南路219号    01234567891"
            android:textColor="@color/write"
            android:textSize="@dimen/sp15"
            />


    </LinearLayout>

</LinearLayout>