<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_gray_e9">

        <LinearLayout
            android:id="@+id/linear_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp48"
            android:layout_below="@+id/rl_choose"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10"
            android:background="@color/bg_gray_e9"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_wholesale_market"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:text="@string/wholesale_market"
                android:textColor="@color/txt_black_51"
                android:textSize="@dimen/sp13"
                />

            <TextView
                android:id="@+id/tv_pay_stall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:text="@string/pay_stall"
                android:textSize="@dimen/sp13"
                android:textColor="@color/txt_black_51"


                />

            <TextView
                android:id="@+id/tv_punish"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/txt_black_51"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:drawablePadding="@dimen/dp3"
                android:text="@string/punish"
                android:paddingRight="@dimen/dp3"
                android:textSize="@dimen/sp13"
            />
            <ImageView
                android:id="@+id/iv_tri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_arrow_down_tri"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/tv_price"
                android:textColor="@color/txt_black_51"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/price"
                android:textSize="@dimen/sp13"
                />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="0dp"
                android:textColor="@color/txt_black_51"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/date"
                android:textSize="@dimen/sp13"
                 />

            <TextView
                android:id="@+id/tv_violation_of_regulations"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|center_vertical"
                android:background="@color/color_00d39d"
                android:padding="@dimen/dp3"
                android:text="@string/violation_of_regulations"
                android:textSize="@dimen/sp13"
                android:textColor="@color/write"
                />


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_bg"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp53"
            android:layout_below="@+id/linear_item"
            android:visibility="gone"
            android:background="@drawable/bg_center_detail_info">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:textSize="@dimen/sp15" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:textSize="@dimen/sp15"


                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:text="张浩"
                    android:textColor="@color/write"
                    android:textSize="@dimen/sp15" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp15"
                    android:text="012345678901"
                    android:textColor="@color/write"
                    android:textSize="@dimen/sp15" />



            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>