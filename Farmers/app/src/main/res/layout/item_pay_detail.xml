<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dp69">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp61"
        android:background="@drawable/bg_white_all_radio">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp30"
                android:layout_marginLeft="@dimen/dp12"
                >

                <TextView
                    android:id="@+id/tv_symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="¥"
                    android:textColor="@color/color_00d39d"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_symbol"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dp6"
                    android:textColor="@color/color_00d39d"
                    android:text="300"
                    android:textSize="@dimen/sp18" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp30"
                android:text="2019-05-11 18:00"
                android:gravity="center_vertical"
                android:textColor="@color/txt_black_153"
                android:layout_marginLeft="@dimen/dp12"
                android:textSize="@dimen/sp14" />


        </LinearLayout>
        <TextView
            android:id="@+id/tv_pay_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="物业费"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:textColor="@color/txt_black_51"
            android:layout_marginRight="@dimen/dp20"
            android:textSize="@dimen/sp19" />

    </RelativeLayout>


</RelativeLayout>