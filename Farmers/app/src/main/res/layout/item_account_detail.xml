<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp59"
        >

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:gravity="center"
            android:text="今天"
            android:layout_marginLeft="@dimen/dp50"
            android:textColor="@color/txt_black_51"
            android:textSize="@dimen/sp14"
            />
        <TextView
            android:id="@+id/tv_date_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp10"
            android:gravity="center"
            android:text="2019,09,09"
            android:layout_marginLeft="@dimen/dp50"
            android:layout_below="@+id/tv_date"
            android:textColor="@color/txt_black_51"
            android:textSize="@dimen/sp14"
            />
        
        
        
        <ImageView
            android:id="@+id/iv_to"
            android:layout_width="@dimen/dp8"
            android:layout_height="@dimen/dp15"
            android:background="@drawable/bg_arrow_black_to"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp25"
            />
        <TextView
            android:id="@+id/tv_sale_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:layout_toLeftOf="@+id/iv_to"
            android:textSize="@dimen/sp14"
            android:gravity="center"
            android:text="0.00"
            android:layout_marginRight="@dimen/dp20"
            android:textColor="@color/color_00d39d"
            />
        <TextView
            android:id="@+id/tv_buy_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp10"
            android:gravity="center"
            android:text="0.00"
            android:layout_toLeftOf="@+id/iv_to"
            android:textSize="@dimen/sp14"
            android:layout_below="@+id/tv_date"
            android:layout_marginRight="@dimen/dp20"
            android:textColor="@color/color_00d39d"
            />



    </RelativeLayout>


</RelativeLayout>