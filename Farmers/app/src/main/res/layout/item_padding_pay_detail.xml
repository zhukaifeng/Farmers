<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dp53">


    <RelativeLayout
        android:id="@+id/rl_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp53"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_pay_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp38"
            android:layout_centerVertical="true"
            android:text="@string/total"
            android:textColor="@color/txt_black_51"
            android:textSize="@dimen/sp16" />

        <TextView
            android:id="@+id/tv_pay"
            android:layout_width="@dimen/dp78"
            android:layout_height="@dimen/dp27"
            android:background="@drawable/bg_round_tric"
            android:layout_gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:text="@string/charge_pay_now"
            android:textColor="@color/write"
            android:gravity="center"
            android:textSize="@dimen/sp13"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp38"
            />
        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp38"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_pay"
            android:text="-130.64"
            android:textColor="@color/color_00d39d"
            android:layout_marginRight="@dimen/dp19"
            android:textSize="@dimen/sp16" />
    </RelativeLayout>


</RelativeLayout>