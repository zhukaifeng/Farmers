<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <LinearLayout
        android:id="@+id/linear_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp181"
            android:background="@drawable/bg_top_goods">

            <RelativeLayout
                android:id="@+id/rl_back"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp33"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginTop="@dimen/dp20">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="@dimen/dp9"
                    android:layout_height="@dimen/dp16"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/bg_back"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/dp223"
                android:layout_height="@dimen/dp33"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp20"
                android:background="@drawable/bg_round_title">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/bill_of_sales_details"
                    android:textColor="@color/write"
                    android:textSize="@dimen/sp15"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="#E1E2EA"/>




        </RelativeLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp60"
                    android:gravity="center"
                    android:text="@string/goods_detail"
                    android:textColor="@color/txt_black_51"
                    android:textSize="@dimen/sp20"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:background="#E1E2EA"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp48"
                    android:background="@color/bg_gray_e9"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp42"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="单        号"
                        android:textColor="@color/color_00d39d"
                        android:textSize="@dimen/sp15"/>

                    <TextView
                        android:id="@+id/tv_product_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@color/write"
                        android:gravity="center"
                        android:textColor="@color/txt_black_51"
                        android:textSize="@dimen/sp15"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:background="#E1E2EA"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp48"
                    android:background="@color/bg_gray_e9"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp42"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="商品类别"
                        android:textColor="@color/color_00d39d"
                        android:textSize="@dimen/sp15"/>

                    <TextView
                        android:id="@+id/tv_product_type"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@color/write"
                        android:gravity="center"
                        android:textColor="@color/txt_black_51"
                        android:textSize="@dimen/sp15"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:background="#E1E2EA"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp48"
                    android:background="@color/bg_gray_e9"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp42"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="商品名称"
                        android:textColor="@color/color_00d39d"
                        android:textSize="@dimen/sp15"/>

                    <TextView
                        android:id="@+id/tv_product_count"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@color/write"
                        android:gravity="center"
                        android:text="50斤"
                        android:textColor="@color/txt_black_51"
                        android:textSize="@dimen/sp15"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:background="#E1E2EA"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp48"
                    android:background="@color/bg_gray_e9"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp42"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="批        号"
                        android:textColor="@color/color_00d39d"
                        android:textSize="@dimen/sp15"/>

                    <TextView
                        android:id="@+id/tv_product_price"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@color/write"
                        android:gravity="center"
                        android:textColor="@color/txt_black_51"
                        android:textSize="@dimen/sp15"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:background="#E1E2EA"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp48"
                    android:background="@color/bg_gray_e9"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp42"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="供  应  商"
                        android:textColor="@color/color_00d39d"
                        android:textSize="@dimen/sp15"/>

                    <TextView
                        android:id="@+id/tv_product_total_price"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@color/write"
                        android:gravity="center"
                        android:textColor="@color/txt_black_51"
                        android:textSize="@dimen/sp15"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:background="#E1E2EA"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp61"
                    android:background="@color/bg_gray_e9"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp42"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="生产日期"
                        android:textColor="@color/color_00d39d"
                        android:textSize="@dimen/sp15"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@color/write"
                        android:gravity="center"
                        android:textSize="@dimen/sp16">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_product_date"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:background="@color/write"
                                android:gravity="center"
                                android:textColor="@color/txt_black_51"
                                android:textSize="@dimen/sp15"/>

                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:background="#E1E2EA"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp61"
                    android:background="@color/bg_gray_e9"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp42"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="入库数量"
                        android:textColor="@color/color_00d39d"
                        android:textSize="@dimen/sp15"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@color/write"
                        android:gravity="center"
                        android:textSize="@dimen/sp16">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_product_num_ru"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:background="@color/write"
                                android:gravity="center"
                                android:textColor="@color/txt_black_51"
                                android:textSize="@dimen/sp15"/>

                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:background="#E1E2EA"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp61"
                    android:background="@color/bg_gray_e9"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp42"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="剩余数量"
                        android:textColor="@color/color_00d39d"
                        android:textSize="@dimen/sp15"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@color/write"
                        android:gravity="center"
                        android:textSize="@dimen/sp16">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_product_num_left"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:background="@color/write"
                                android:gravity="center"
                                android:textColor="@color/txt_black_51"
                                android:textSize="@dimen/sp15"/>

                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:background="#E1E2EA"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp61"
                    android:background="@color/bg_gray_e9"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp42"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="单        价"
                        android:textColor="@color/color_00d39d"
                        android:textSize="@dimen/sp15"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@color/write"
                        android:gravity="center"
                        android:textSize="@dimen/sp16">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_product_price_dan"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:background="@color/write"
                                android:gravity="center"
                                android:textColor="@color/txt_black_51"
                                android:textSize="@dimen/sp15"/>

                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:background="#E1E2EA"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp61"
                    android:background="@color/bg_gray_e9"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp42"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="合        计"
                        android:textColor="@color/color_00d39d"
                        android:textSize="@dimen/sp15"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@color/write"
                        android:gravity="center"
                        android:textSize="@dimen/sp16">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_product_total"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:background="@color/write"
                                android:gravity="center"
                                android:textColor="@color/txt_black_51"
                                android:textSize="@dimen/sp15"/>

                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>


    </LinearLayout>


</LinearLayout>