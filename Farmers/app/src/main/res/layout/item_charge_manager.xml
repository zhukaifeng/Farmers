<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/write"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp59"
            android:layout_marginLeft="@dimen/dp15"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_wholesale_market"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="镇江江南"
                android:textSize="@dimen/sp13"
                android:textColor="@color/txt_black_51" />

            <TextView
                android:id="@+id/tv_pay_stall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="028"
                android:textSize="@dimen/sp13"

                android:textColor="@color/txt_black_51"
                />

            <TextView
                android:id="@+id/tv_person_charge"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:drawableRight="@drawable/bg_arrow_up_tri"
                android:text="张浩"
                android:textSize="@dimen/sp13"
                android:textColor="@color/txt_black_51"
                />

            <TextView
                android:id="@+id/tv_pay_should"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="500元"
                android:textColor="@color/txt_black_51"
                android:textSize="@dimen/sp13"
                />

            <TextView
                android:id="@+id/tv_pay_not"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0元"
                android:textSize="@dimen/sp13"
                android:textColor="@color/txt_black_51"/>
            <TextView
                android:id="@+id/tv_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="2019.03.22"
                android:textSize="@dimen/sp13"
                android:textColor="@color/color_00d39d"/>
        </LinearLayout>
        
        <RelativeLayout
            android:id="@+id/rl_check"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp53"
            android:background="@drawable/bg_pay_check"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/write"
                android:text="张浩   0123456789"
                android:layout_centerInParent="true"
                android:textSize="@dimen/sp16"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp53"
            android:background="@drawable/bg_pay_check_detail"
            >
            <TextView
                android:id="@+id/tv_check_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_00d39d"
                android:text="@string/check_detail"
                android:layout_centerInParent="true"
                android:textSize="@dimen/sp16"
                />

        </RelativeLayout>
        
    </LinearLayout>
</LinearLayout>